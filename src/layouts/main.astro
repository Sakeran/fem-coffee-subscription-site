---
import Header from "../components/shared/Header.astro";
import HeaderScript from "../components/shared/HeaderScript.astro";
import Footer from "../components/shared/Footer.astro";

export interface Props {
  title?: string;
}

const title =
  (Astro.props.title ? `${Astro.props.title} - ` : "") + "Coffeeroasters";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/assets/favicon-32x32.png"
    />

    <title>{title}</title>

    <link
      rel="stylesheet"
      type="text/css"
      href={Astro.resolve("../styles/global.scss")}
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;700&family=Fraunces:wght@900&display=swap"
      rel="stylesheet"
    />
  </head>

  <body
    class="min-h-screen flex flex-col | text-base text-prose leading-base | bg-cream"
  >
    <a
      class="block z-20 absolute p-4 | text-6 font-serif text-cream bg-primary | -translate-y-25 focus:-translate-y-0 duration-300 ease-in-out"
      href="#main-content">Skip to Main Content</a
    >

    <div>
      <Header />
    </div>

    <main id="main-content">
      <slot />
    </main>

    <div class="mt-auto">
      <Footer />
    </div>
    <HeaderScript />
  </body>
</html>
